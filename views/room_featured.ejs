<!doctype <!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%-room.name %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="../styles/stylesRF.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>
  <body>
    <h1>
        Welcome to Room <%-room.name %>!
    </h1>
    <br>
    <br>
    <div>
        <%-room.description %>
    </div>
    <br>
    <br>
    <div>
        Did you live in room <%-room.name %>? Leave a comment with your experience.
    </div>
    <br>
    <br>
    <div>
        <h2> Comments </h2>
        <ul>
            <% comments.forEach(comment => { %>
            <li>
                <%- comment.text %>
            </li>
            <% }); %>
        </ul>
    </div>
    <div>
        Comment:
      <form action = "/commenthandler/<%- room.roomId %>", method = "post">
        <input name = "comment", type="text"/>
        <input type = "submit"/>
      </form>
    </div>
  </body>
</html>

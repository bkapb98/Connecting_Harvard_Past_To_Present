<% include header %>
      <div class="container">
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">

                    <div class="carousel-item active">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/82/Winthrop_House_aerial_extract.jpg/1200px-Winthrop_House_aerial_extract.jpg" class="resize">
                    </div>
                    <% houses.forEach(house => { %>
                    <div class="carousel-item">
                        <img src="<%-house.imgurl%>" class="resize">
                    </div>
                    <% }); %>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
          </div>
  <br> <br>

      <script src="https://unpkg.com/vue@2.5.17/dist/vue.min.js"></script>
      <div class="container-fluid">
          <div class="row">
              <% houses.forEach(house => { %>
              <div class="col-md-4" style="background-color: azure">
                  <a href="/house/<%= house.id %>"> <%= house.name %> </a>
                  <br>
                  <%= house.description %>
              </div>
              <% }); %>
          </div>
      </div>


      <div>
      <link rel="stylesheet" href="awesomplete.css" />
      <script src="awesomplete.js" async></script>
      <form action = "/roomhandler", method = "post">
      <label for="inputs">Search a Room or House:</label>
      <input name = "inputs" class="awesomplete" data-maxitems = "5" data-minchars = "1" autocomplete = "off" type= "text" list="rooms" placeholder="Type to search a room or house."/>
      <datalist id="rooms">
        <% houses.forEach(house => { %>
            <option><%=house.name %></option>
        <% }); %>
        <% rooms.forEach(room => { %>
      	    <option value ="<%= room.houseName + " " + room.entryway " " + room.number%>" ><%=room.houseName + " " + room.name%> </option>
        <% }); %>
      </datalist>
    </form>
    </div>
<% include footer %>

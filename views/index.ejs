<!DOCTYPE html>
<html>
  <head>
     <%- include('header') %>
  </head>
  <style type="text/css">
          img.resize{
            width: 100%;
            max-width: 60px ; 
            max-height: 500px ;
          }
            .buttoncontainer {
              display: inline-block;
              position: inherit;
              float: right;
          }
      </style>
  <body>
    <div class="buttoncontainer">
      <form action="/login" method="get">
          <button class="btn btn-primary" type="submit">Login</button>
      </form>
      <form action="/register" method="get">
          <button class="btn btn-primary" type="submit">Register</button>
      </form>

    </div>
      <div class="container">
          <h2 style="color:red"> Connecting Harvard</h2>
          <div id="myCarousel" class="carousel slide" data-ride="carousel">
              <!-- Indicators -->
              <ol class="carousel-indicators">
              <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
              <li data-target="#myCarousel" data-slide-to="1"></li>
              <li data-target="#myCarousel" data-slide-to="2"></li>
              </ol>

              <!-- Wrapper for slides -->
              <div class="carousel-inner">
              <% houses.forEach(house => { %>
                  <div class="item">
                          <img src="<%-house.imgurl%>" class="resize">
                  </div>
              <% }); %>

              <div class="item active">
                  <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/82/Winthrop_House_aerial_extract.jpg/1200px-Winthrop_House_aerial_extract.jpg" class="resize">
              </div>
          </div>

              <!-- Left and right controls -->
              <a class="left carousel-control" href="#myCarousel" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
              <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control" href="#myCarousel" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
              <span class="sr-only">Next</span>
              </a>
          </div>
          </div>
  <br> <br>

      <script src="https://unpkg.com/vue@2.5.17/dist/vue.min.js"></script>
      <div class="container-fluid">
          <div class="row">
              <% houses.forEach(house => { %>
              <div class="col-md-4" style="background-color: azure">
                  <a href="/house/<%- house.houseId %>"> <%- house.name %> </a>
                  <br>
                  <%- house.description %>
              </div>
              <% }); %>
          </div>
      </div>


      <div>
      <form action = "/roomhandler", method = "post">
      <label for="inputs">Search a Room or House:</label>
      <input name = "inputs" class="awesomplete" autocomplete = "off" class = "form-control" type= "text" list="rooms" placeholder="Type to search a room or house."/>
      <datalist id="rooms">
        <% rooms.forEach(room => { %>
      	<option><%-room.name %></option>
        <% }); %>
        <% houses.forEach(house => { %>
      	<option><%-house.name %></option>
        <% }); %>
      </datalist>
    </form>
    </div>
  </body>
  </html>

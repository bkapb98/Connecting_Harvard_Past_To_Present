<!DOCTYPE html>
<html>
  <head>
      <meta charset="utf-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <title>Connecting Harvard</title>
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link rel="stylesheet" type="text/css" media="screen" href="../styles/stylesIndex.css" />
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
      <link href="https://unpkg.com/vue-bootstrap-typeahead/dist/VueBootstrapTypeahead.css" rel="stylesheet">
      <script src="https://unpkg.com/vue-bootstrap-typeahead"></script>
      <link rel="stylesheet" href="awesomplete.css" />
      <script src="awesomplete.js" async></script>
      <style type="text/css">
          img.resize{
            width: 100%;
            max-width: 60px ;
            max-height: 500px ;
          }
            .buttoncontainer {
              display: inline-block;
              position: inherit;
              float: right;
          }
      </style>
  </head>

  <body>
    <div class="buttoncontainer">
      <form action="/login" method="get">
          <button class="btn btn-primary" type="submit">Login</button>
      </form>
      <form action="/register" method="get">
          <button class="btn btn-primary" type="submit">Register</button>
      </form>
      <form action="/logout" method="get">
          <button class="btn btn-primary" type="submit">Logout</button>
      </form>

    </div>
      <div class="container">
          <h2 style="color:red"> Connecting Harvard</h2>
          <div id="myCarousel" class="carousel slide" data-ride="carousel">
              <!-- Indicators -->
              <ol class="carousel-indicators">
              <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
              <li data-target="#myCarousel" data-slide-to="1"></li>
              <li data-target="#myCarousel" data-slide-to="2"></li>
              </ol>

              <!-- Wrapper for slides -->
              <div class="carousel-inner">
              <% houses.forEach(house => { %>
                  <div class="item">
                          <img src="<%-house.imgurl%>" class="resize">
                  </div>
              <% }); %>

              <div class="item active">
                  <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/82/Winthrop_House_aerial_extract.jpg/1200px-Winthrop_House_aerial_extract.jpg" class="resize">
              </div>
          </div>

              <!-- Left and right controls -->
              <a class="left carousel-control" href="#myCarousel" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
              <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control" href="#myCarousel" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
              <span class="sr-only">Next</span>
              </a>
          </div>
          </div>
  <br> <br>

      <script src="https://unpkg.com/vue@2.5.17/dist/vue.min.js"></script>
      <div class="container-fluid">
          <div class="row">
              <% houses.forEach(house => { %>
              <div class="col-md-4" style="background-color: azure">
                  <a href="/house/<%- house.houseId %>"> <%= house.houseName %> </a>
                  <br>
                  <%= house.description %>
              </div>
              <% }); %>
          </div>
      </div>


      <div>
      <form action = "/roomhandler", method = "post">
      <label for="inputs">Search a Room or House:</label>
      <input name = "inputs" class="awesomplete" autocomplete = "off" class = "form-control" type= "text" list="rooms" placeholder="Type to search a room or house."/>
      <datalist id="rooms">
        <% houses.forEach(house => { %>
        <option><%=house.houseName %></option>
        <% }); %>
        <% rooms.forEach(room => { %>
      	<option value ="<%= room.houseName + " " + room.name%>" ><%=room.name%> </option>
        <% }); %>

      </datalist>
    </form>
    </div>
  </body>
  </html>
